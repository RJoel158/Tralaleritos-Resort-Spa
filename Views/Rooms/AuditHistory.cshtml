@model IEnumerable<ResortTralaleritos.Models.RoomAuditLog>

@{
    ViewData["Title"] = "Historial de Cambios";
    var room = ViewBag.Room as ResortTralaleritos.Models.Room;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>Historial de Cambios</h1>
                    <p class="text-muted">Habitación: <strong>@room?.RoomNumber</strong> (@room?.RoomType)</p>
                </div>
                <a href="@Url.Action("Edit", "Rooms", new { id = room?.RoomId })" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Editar Habitación
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <div class="timeline">
                    @foreach (var log in Model)
                    {
                        <div class="timeline-item mb-4">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h5 class="mb-0">
                                                <span class="badge bg-@GetOperationBadgeColor(log.Operation)">
                                                    @log.Operation
                                                </span>
                                                @if (!string.IsNullOrEmpty(log.FieldName))
                                                {
                                                    <span class="ms-2"><strong>@log.FieldName</strong></span>
                                                }
                                                @if (!string.IsNullOrEmpty(log.ChangeDescription))
                                                {
                                                    <span class="ms-2 text-muted">@log.ChangeDescription</span>
                                                }
                                            </h5>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3"></i> @log.ModifiedDate.ToString("dd/MM/yyyy HH:mm:ss")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2"><strong>Usuario:</strong> @log.ModifiedBy</p>
                                            @if (!string.IsNullOrEmpty(log.IpAddress))
                                            {
                                                <p class="mb-2"><strong>IP:</strong> <code>@log.IpAddress</code></p>
                                            }
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <p class="mb-0"><strong>Operación:</strong> <span class="badge bg-secondary">@log.Operation</span></p>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(log.OldValue) || !string.IsNullOrEmpty(log.NewValue))
                                    {
                                        <div class="mt-3">
                                            <div class="row">
                                                @if (!string.IsNullOrEmpty(log.OldValue))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="alert alert-warning mb-0" role="alert">
                                                            <strong>Valor Anterior:</strong>
                                                            <div class="mt-2">
                                                                <code>@log.OldValue</code>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(log.NewValue))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="alert alert-success mb-0" role="alert">
                                                            <strong>Valor Nuevo:</strong>
                                                            <div class="mt-2">
                                                                <code>@log.NewValue</code>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> No hay cambios registrados para esta habitación.
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a href="@Url.Action("Search", "Rooms")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a Búsqueda
            </a>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 20px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: #dee2e6;
    }

    .timeline-item {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: -14px;
        top: 12px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #0d6efd;
        border: 3px solid white;
    }

    code {
        background-color: #f8f9fa;
        padding: 8px;
        border-radius: 4px;
        display: block;
        word-wrap: break-word;
    }
</style>

@functions {
    private string GetOperationBadgeColor(string operation)
    {
        return operation switch
        {
            "Create" => "success",
            "Update" => "warning",
            "Delete" => "danger",
            _ => "secondary"
        };
    }
}
