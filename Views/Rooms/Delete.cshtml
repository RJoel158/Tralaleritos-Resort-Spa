@model ResortTralaleritos.Models.Room

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Habitación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Estás seguro?</strong> Esta acción no se puede deshacer.
                    </div>

                    <h5 class="mb-3">Habitación #@Model.RoomNumber</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Tipo</h6>
                            <p>@Model.RoomType</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Precio por Noche</h6>
                            <p>${@Model.PricePerNight}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h6 class="text-muted">Capacidad</h6>
                            <p>@Model.Capacity personas</p>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-muted">Camas</h6>
                            <p>@Model.Beds cama(s)</p>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-muted">Estado</h6>
                            <p>
                                <span class="badge bg-@GetStatusBadgeColor(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <h6 class="text-muted">Descripción</h6>
                            <p>@Model.Description</p>
                        </div>
                    }

                    <hr class="my-4" />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="RoomId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar Habitación
                        </button>
                        <a href="@Url.Action("Search", "Rooms")" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeColor(ResortTralaleritos.Models.RoomStatus status)
    {
        return status switch
        {
            ResortTralaleritos.Models.RoomStatus.Available => "success",
            ResortTralaleritos.Models.RoomStatus.Occupied => "danger",
            ResortTralaleritos.Models.RoomStatus.Cleaning => "warning",
            ResortTralaleritos.Models.RoomStatus.Maintenance => "secondary",
            ResortTralaleritos.Models.RoomStatus.Reserved => "info",
            _ => "light"
        };
    }
}
