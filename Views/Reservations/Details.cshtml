@model ResortTralaleritos.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/StyleSheet.css" rel="stylesheet" />

<div class="container">
    <div class="header">
        <h1>Details Reservation</h1>
    </div>

    <div class="form-card">
        <h2 class="form-title">Reservation Information</h2>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CheckInDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckInDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckOutDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegistrationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.Email)
            </dd>
            <dt class="col-sm-2">
                Assigned Rooms
            </dt>
            <dd class="col-sm-10">
                @if (Model?.ReservationRooms != null && Model.ReservationRooms.Any())
                {
                    <ul>
                        @foreach (var rr in Model.ReservationRooms)
                        {
                            <li>Room @rr.Room?.RoomNumber - Status: @rr.Room?.Status</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No rooms assigned</span>
                }
            </dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-guardar">Edit</a>
        <a asp-action="Index" class="btn btn-cancelar">Back to List</a>
    </div>
</div>
