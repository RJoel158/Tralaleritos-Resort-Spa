@model ResortTralaleritos.Models.Service

@{
    ViewData["Title"] = "Editar Servicio";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editar Servicio
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ServiceId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OpeningTime" class="form-label fw-bold">Hora de Apertura</label>
                                    <input asp-for="OpeningTime" type="time" class="form-control" />
                                    <span asp-validation-for="OpeningTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ClosingTime" class="form-label fw-bold">Hora de Cierre</label>
                                    <input asp-for="ClosingTime" type="time" class="form-control" />
                                    <span asp-validation-for="ClosingTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BaseCost" class="form-label fw-bold">Costo Base ($)</label>
                            <input asp-for="BaseCost" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="BaseCost" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
