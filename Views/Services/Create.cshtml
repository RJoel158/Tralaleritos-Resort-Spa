@model ResortTralaleritos.Models.Service

@{
    ViewData["Title"] = "Crear Nuevo Servicio";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Crear Nuevo Servicio</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nombre del Servicio</label>
                            <input asp-for="Name" class="form-control" placeholder="Ej: Spa, Restaurante" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe el servicio"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="OpeningTime" class="form-label fw-bold">Hora de Apertura</label>
                                <input asp-for="OpeningTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="OpeningTime" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingTime" class="form-label fw-bold">Hora de Cierre</label>
                                <input asp-for="ClosingTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ClosingTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BaseCost" class="form-label fw-bold">Costo Base ($)</label>
                            <input asp-for="BaseCost" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="BaseCost" class="text-danger small"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Crear Servicio
                            </button>
                            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
