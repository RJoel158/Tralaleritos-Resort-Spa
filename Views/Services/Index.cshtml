@model IEnumerable<ResortTralaleritos.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1>Services</h1>
    <p>Manage all the active services</p>
</div>

<p>
    <a asp-action="Create" class="btn-nuevo">Create New</a>
</p>
<table class="table-container">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Description)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.OpeningTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.OpeningTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingTime)
            </td>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.BaseCost)</strong>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn-editar">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn-detalles">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn-eliminar">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
