@model IEnumerable<ResortTralaleritos.Models.Service>

@{
    ViewData["Title"] = "Gestión de Servicios";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestión de Servicios</h1>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nuevo Servicio
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Horario</th>
                                        <th>Costo Base</th>
                                        <th>Fecha Registro</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.OpeningTime.ToString("HH:mm") - @item.ClosingTime.ToString("HH:mm")</td>
                                            <td>${@item.BaseCost}</td>
                                            <td>@item.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            No hay servicios registrados. <a asp-action="Create" class="alert-link">Crear uno ahora</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
