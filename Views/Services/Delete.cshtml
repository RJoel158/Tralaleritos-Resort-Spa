@model ResortTralaleritos.Models.Service

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Advertencia:</strong> Esta acción no se puede deshacer. ¿Está seguro de que desea eliminar este servicio?
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trash"></i> Confirmar Eliminación: <strong>@Model?.Name</strong>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <p class="text-muted">Nombre</p>
                            <p class="fw-bold">@Model?.Name</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <p class="text-muted">Descripción</p>
                            <p class="bg-light p-2">@Model?.Description</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <p class="text-muted">Horario de Apertura</p>
                            <p class="fw-bold">@Model?.OpeningTime.ToString(@"hh\:mm")</p>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted">Horario de Cierre</p>
                            <p class="fw-bold">@Model?.ClosingTime.ToString(@"hh\:mm")</p>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted">Costo Base</p>
                            <p class="fw-bold">${@Model?.BaseCost}</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ServiceId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
