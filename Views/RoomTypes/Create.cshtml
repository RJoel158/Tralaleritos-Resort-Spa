@model ResortTralaleritos.Models.RoomType

@{
    ViewData["Title"] = "Crear Nuevo Tipo de Habitación";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Nuevo Tipo de Habitación
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BasePrice" class="form-label fw-bold">Precio Base ($)</label>
                                    <input asp-for="BasePrice" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DefaultCapacity" class="form-label fw-bold">Capacidad</label>
                                    <input asp-for="DefaultCapacity" type="number" min="1" max="10" class="form-control" />
                                    <span asp-validation-for="DefaultCapacity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DefaultBeds" class="form-label fw-bold">Cantidad de Camas</label>
                            <input asp-for="DefaultBeds" type="number" min="1" max="10" class="form-control" />
                            <span asp-validation-for="DefaultBeds" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info">
                                <i class="bi bi-check-circle"></i> Crear
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
