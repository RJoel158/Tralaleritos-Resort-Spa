@model ResortTralaleritos.Models.RoomType

@{
    ViewData["Title"] = "Detalles del Tipo de Habitación";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Detalles del Tipo: <strong>@Model?.Name</strong>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="text-muted">Nombre</p>
                            <h5>@Model?.Name</h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted">Precio Base</p>
                            <h5>
                                <span class="badge bg-success">${@Model?.BasePrice}</span>
                            </h5>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="text-muted">Capacidad</p>
                            <h5>
                                <span class="badge bg-primary">@Model?.DefaultCapacity personas</span>
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted">Cantidad de Camas</p>
                            <h5>
                                <span class="badge bg-secondary">@Model?.DefaultBeds</span>
                            </h5>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <p class="text-muted">Descripción</p>
                            <p class="card bg-light p-2">@Model?.Description</p>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.RoomTypeId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
